# PADME Playground 本地化环境变量配置
# playground_env_version: 1.0

# 服务域名配置
SERVICE_DOMAIN=localhost
PROD_SERVICE_DOMAIN=localhost

# 镜像配置
BACKEND_IMAGE=padme-playground-backend:local
FRONTEND_IMAGE=padme-playground-frontend:local
DIND_IMAGE=padme-playground-dind:local
BLAZEGRAPH_IMAGE=padme-playground-blazegraph:local

# Keycloak配置
PLAYGROUND_KEYCLOAK_REALM=pht
KEYCLOAK_SERVER_URL=http://localhost:8090
KEYCLOAK_CLIENT_ID=playground

# 端口配置
PLAYGROUND_BACKEND_PORT=3002
PLAYGROUND_FRONTEND_PORT=3003
BLAZEGRAPH_PORT=9998

# Docker配置
DOCKER_HOST=playground-dind
DOCKER_PORT=2376

# 本地化URL
PLAYGROUND_BACKEND_URL=http://localhost:3002
PLAYGROUND_FRONTEND_URL=http://localhost:3003
BLAZEGRAPH_URL=http://localhost:9998

# API配置
API_PORT=80
LOGGER_LEVEL=info
CORS_ORIGIN=http://localhost:3003

# 元数据端点
METADATA_ENDPOINT=http://blazegraph:9999/bigdata/sparql

# 部署配置（本地开发）
DEPLOYMENT_TARGET_DIR=/tmp/playground/
DEPLOYMENT_TARGET_HOST=localhost
DEPLOYMENT_TARGET_SSH_KEY=not_needed_for_local
